<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F3C892"
    android:orientation="vertical"
    android:id="@+id/layout_add_new_place"
    tools:context=".add_new_place"
    >


    <TextView
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/abraham_regular"
    android:text="פעם ראשונה באפליקציה?"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="30dp"

    />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/abraham_regular"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:text="צור את מקום ההתנדבות שלך"
    android:textSize="20dp"/>

    <EditText
        android:id="@+id/newP_name"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="שם המקום:"
        android:fontFamily="@font/abraham_regular"
        android:layoutDirection="rtl"
        android:textDirection="rtl"/>

    <EditText
        android:id="@+id/newP_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abraham_regular"
        android:hint="תיאור המקום"
        android:layoutDirection="rtl"
        android:textDirection="rtl"/>

    <EditText
        android:id="@+id/newP_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="כתובת המקום"
        android:textColor="@color/white"
        android:fontFamily="@font/abraham_regular"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">


        <ImageView
        android:id="@+id/newP_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/blankpicture"    />

        <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abraham_regular"
        android:text="הוסף תמונה"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    </LinearLayout>

    <Button
    android:layout_marginTop="20dp"
    android:id="@+id/newP_saveButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="#A3DA8D"
    android:text="שמור מקום"
    android:fontFamily="@font/abraham_regular"
    android:textSize="30dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="200dp"
        />


</LinearLayout>